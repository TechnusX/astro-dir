---
// component imports
import Link from "./Link.astro"

const {prevUrl, nextUrl} = Astro.props;
---

<nav aria-label="Blog pages">
    {
        prevUrl && (
            <Link
                text="Previous"
                href={prevUrl}
                style="secondary"
                borderVisible={true}
                isFilled={true}
            />
        )
    }
    {
        nextUrl && (
            <Link
                text="Next"
                href={nextUrl}
                style="secondary"
                borderVisible={true}
                isFilled={true}
                
            />
        )
    }
</nav>